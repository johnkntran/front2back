{
  "name": "Front2Back",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "backend",
  "workspaceFolder": "/code",
  "forwardPorts": [8000, 3000],
  "postCreateCommand": "git config --global user.name $GIT_USERNAME && git config --global user.email $GIT_EMAIL",
  "customizations": {
    "vscode": {
      "extensions": [
        "astral-sh.ty",
        "charliermarsh.ruff",
        "ms-python.python",
        "anthropic.claude-code",
        "openai.chatgpt"
      ],
      "settings": {}
    }
  }
}
